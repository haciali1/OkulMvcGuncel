@model Sube2.HelloMvc.Models.Ders
@{
    ViewData["Title"] = "Ders Düzenle";
}

<h1>Ders Düzenle</h1>

<form asp-action="EditDers" asp-controller="Ders" method="post">
    <input type="hidden" asp-for="Dersid" />
    <div class="form-group">
        <label for="Dersad">Ders Adı</label>
        <input type="text" class="form-control" id="Dersad" name="Dersad" asp-for="Dersad" />
    </div>
    <div class="form-group">
        <label for="Kredi">Kredi</label>
        <input type="number" class="form-control" id="Kredi" name="Kredi" asp-for="Kredi" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" asp-controller="Ders" class="btn btn-secondary">Geri</a>
</form>
